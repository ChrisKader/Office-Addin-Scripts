{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["ES2015"],
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
      "outDir": "lib",
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "node_modules/@types/**/*.d.ts"],
  "exclude": [
      "node_modules",
      "dist",
      "test/cases/**/*",
  ],
}
